#!/bin/bash
#
# ip j채rgi arvuti kontrollimine
echo "Sisesta ip vahemiku algus: "
read algus
echo "Sisesta ip vahemiku l천pp: "
read lopp
echo -n > ping_tulemus
for ((nr=$algus ; nr <=$lopp; nr++))

#for ip in 172.23.13.{ $algus..$lopp }
do
ip=172.23.13.$nr
  ping -c 1 $ip > /dev/null # v채ljund on kustutatud
  if [ $? -eq 0 ] ; then
     # kui $ on 0 - korras
     echo "$ip - ok" >> ping_tulemus
     # muidu
   else
     echo "$ip - not" >> ping_tulemus
  fi #if lause l천pp
done

